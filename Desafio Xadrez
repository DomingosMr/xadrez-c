#include <stdio.h>

/*
 * Simula movimentos de peças de xadrez:
 * Torre (for), Bispo (while) e Rainha (do-while).
 * Cada peça se move um número fixo de casas.
 */

int main() {
    // Movimento da Torre: 5 casas para a direita usando for
    int torreMovimentos = 5;
    printf("Movimento da Torre (5 casas para a Direita):\n");
    for (int i = 0; i < torreMovimentos; i++) {
        printf("Direita\n");
    }

    printf("\n");

    // Movimento do Bispo: 5 casas na diagonal superior direita usando while
    int bispoMovimentos = 5;
    int i = 0;
    printf("Movimento do Bispo (5 casas na Diagonal Cima Direita):\n");
    while (i < bispoMovimentos) {
        printf("Cima Direita\n");
        i++;
    }

    printf("\n");

    // Movimento da Rainha: 8 casas para a esquerda usando do-while
    int rainhaMovimentos = 8;
    int j = 0;
    printf("Movimento da Rainha (8 casas para a Esquerda):\n");
    do {
        printf("Esquerda\n");
        j++;
    } while (j < rainhaMovimentos);

    return 0;
}
